<div id="banner">
  <h1>Discover your new favourite podcast</h1>
</div>

<div id="podcasts" class="cf container mx-auto">
  <div class="wrapper">
    <ul class="cf">
      <% @podcasts.each do |podcast| %>
        <%= link_to podcast do %>
        <li>
          <%= image_tag podcast.thumbnail.url(:medium) %>
          <div class="podcast_overview">
            <h2><%= podcast.title %></h2>
            <p class="episode_count"><%= podcast.episodes.count %> Episodes</p>
          </div>
        </li>
        <% end %>
      <% end %>
    </ul>
    <%= will_paginate(@podcasts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer,
    class: 'd-flex justify-content-center') %>
  </div>
</div>

